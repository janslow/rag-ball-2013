{
  "scss-shared": {
    "files": ["<%= site.scss %>/_*.scss", "<%= site.sprites %>/**"],
    "tasks": ["sass"]
  },
  "scss-window": {
    "files": ["<%= site.scss %>/window.scss", "<%= site.scss %>/window/**/*.scss"],
    "tasks": ["sass:window"]
  },
  "scss-simple": {
    "files": ["<%= site.scss %>/simple.scss", "<%= site.scss %>/simple/**/*.scss"],
    "tasks": ["sass:simple"]
  },
  "scss-construction": {
    "files": ["<%= site.scss %>/construction.scss", "<%= site.scss %>/construction/**/*.scss"],
    "tasks": ["sass:construction"]
  },
  "scss-mobile": {
    "files": ["<%= site.scss %>/mobile.scss", "<%= site.scss %>/mobile/**/*.scss"],
    "tasks": ["sass:mobile"]
  },
  "jekyll": {
    "files": ["<%= site.jekyll %>/**/*", "<%= site.jekyll %>/.htaccess"],
    "tasks": ["debug:build"],
    "options": {
      "livereload": true
    }
  }
}